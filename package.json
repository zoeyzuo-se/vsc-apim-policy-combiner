{
  "name": "vsc-apim-policy-transformer",
  "displayName": "Azure APIM Policy transformer",
  "description": "Allow users to write c# code in their compilable environment and load that into policy xml file after it has been tested",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zoeyzuo-se/vsc-apim-policy-transformer"
  },
  "publisher": "yuruzuo",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "commands": {
    "vsc-apim-policy-transformer.policyCombiner": "./out/extension",
    "vsc-apim-policy-transformer.policyExtractor": "./out/extension",
    "vsc-apim-policy-transformer.combineFromDirectory": "./out/extension",
    "vsc-apim-policy-transformer.extractFromDirectory": "./out/extension"
  },
  "contributes": {
    "commands": [
      {
        "command": "vsc-apim-policy-transformer.policyCombiner",
        "title": "Policy Combiner"
      },
      {
        "command": "vsc-apim-policy-transformer.policyExtractor",
        "title": "Policy Extractor"
      },
      {
        "command": "vsc-apim-policy-transformer.combineFromDirectory",
        "title": "Combine Policies",
        "arguments": [
          {
            "type": "uri",
            "name": "uri",
            "description": "The URI of the folder that was right-clicked"
          }
        ]
      },
      {
        "command": "vsc-apim-policy-transformer.extractFromDirectory",
        "title": "Extract Policies",
        "arguments": [
          {
            "type": "uri",
            "name": "uri",
            "description": "The URI of the folder that was right-clicked"
          }
        ]
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vsc-apim-policy-transformer.combineFromDirectory",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "vsc-apim-policy-transformer.extractFromDirectory",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint:check": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@types/xml2js": "^0.4.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.37.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "apim-policy-transformer": "^0.0.5-dev",
    "fs": "^0.0.1-security",
    "global": "^4.4.0",
    "vsce": "^2.15.0",
    "xml2js": "^0.4.23"
  }
}
