{
  "name": "azure-apim-policy-combiner",
  "displayName": "Azure APIM Policy combiner",
  "description": "Allow users to write c# code in their compilable environment and load that into policy xml file after it has been tested",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:azure-apim-policy-combiner.policyCombiner"
  ],
  "main": "./out/extension.js",
  "commands": {
    "azure-apim-policy-combiner.policyCombiner": "./out/extension"
  },
  "contributes": {
    "commands": [
      {
        "command": "azure-apim-policy-combiner.policyCombiner",
        "title": "Policy combiner"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "azure-apim-policy-combiner.policyCombiner",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
    
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@types/xml2js": "^0.4.11",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "apim-policy-transformer": "../apim-policy-transformer",
    "fs": "^0.0.1-security",
    "xml2js": "^0.4.23"
  }
}
